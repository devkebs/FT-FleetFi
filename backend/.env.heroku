APP_NAME=FleetFi
APP_ENV=production
APP_KEY=base64:YOUR_GENERATED_APP_KEY_HERE
APP_DEBUG=false
APP_URL=https://your-heroku-app.herokuapp.com

LOG_CHANNEL=stack
LOG_DEPRECATIONS_CHANNEL=null
LOG_LEVEL=error

# Heroku ClearDB MySQL Configuration
# Get CLEARDB_DATABASE_URL from: heroku config:get CLEARDB_DATABASE_URL
# Format: mysql://username:password@hostname/database_name
DB_CONNECTION=mysql
DB_HOST=YOUR_CLEARDB_HOST
DB_PORT=3306
DB_DATABASE=YOUR_DATABASE_NAME
DB_USERNAME=YOUR_CLEARDB_USERNAME
DB_PASSWORD=YOUR_CLEARDB_PASSWORD

BROADCAST_DRIVER=log
CACHE_DRIVER=array
FILESYSTEM_DISK=local
QUEUE_CONNECTION=database
SESSION_DRIVER=cookie
SESSION_LIFETIME=120

MEMCACHED_HOST=127.0.0.1

# Redis (optional - requires Heroku Redis addon $15/mo)
# REDIS_URL will be set automatically by Heroku if you add the addon
REDIS_HOST=127.0.0.1
REDIS_PASSWORD=null
REDIS_PORT=6379

# Mail Configuration (use SendGrid free tier on Heroku)
# heroku addons:create sendgrid:starter
MAIL_MAILER=smtp
MAIL_HOST=smtp.sendgrid.net
MAIL_PORT=587
MAIL_USERNAME=apikey
MAIL_PASSWORD=YOUR_SENDGRID_API_KEY
MAIL_ENCRYPTION=tls
MAIL_FROM_ADDRESS="noreply@fleetfi.com"
MAIL_FROM_NAME="${APP_NAME}"

# AWS S3 (optional - for file uploads)
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_DEFAULT_REGION=us-east-1
AWS_BUCKET=
AWS_USE_PATH_STYLE_ENDPOINT=false

# Pusher (optional - for real-time features)
PUSHER_APP_ID=
PUSHER_APP_KEY=
PUSHER_APP_SECRET=
PUSHER_HOST=
PUSHER_PORT=443
PUSHER_SCHEME=https
PUSHER_APP_CLUSTER=mt1

VITE_PUSHER_APP_KEY="${PUSHER_APP_KEY}"
VITE_PUSHER_HOST="${PUSHER_HOST}"
VITE_PUSHER_PORT="${PUSHER_PORT}"
VITE_PUSHER_SCHEME="${PUSHER_SCHEME}"
VITE_PUSHER_APP_CLUSTER="${PUSHER_APP_CLUSTER}"

# Laravel Sanctum
SANCTUM_STATEFUL_DOMAINS=your-frontend.herokuapp.com,your-frontend.vercel.app
SESSION_DOMAIN=.herokuapp.com

# CORS Configuration
CORS_ALLOWED_ORIGINS=https://your-frontend.herokuapp.com,https://your-frontend.vercel.app

# Trovotech API (for vehicle telemetry)
TROVOTECH_API_URL=https://api.trovotech.com
TROVOTECH_API_KEY=YOUR_TROVOTECH_API_KEY
TROVOTECH_API_SECRET=YOUR_TROVOTECH_API_SECRET

# IdentityPass KYC API
IDENTITYPASS_API_URL=https://api.myidentitypay.com
IDENTITYPASS_APP_ID=YOUR_IDENTITYPASS_APP_ID
IDENTITYPASS_API_KEY=YOUR_IDENTITYPASS_API_KEY

# Payment Gateway - Paystack
PAYSTACK_PUBLIC_KEY=YOUR_PAYSTACK_PUBLIC_KEY
PAYSTACK_SECRET_KEY=YOUR_PAYSTACK_SECRET_KEY
PAYSTACK_PAYMENT_URL=https://api.paystack.co

# Payment Gateway - Flutterwave (alternative)
FLUTTERWAVE_PUBLIC_KEY=YOUR_FLUTTERWAVE_PUBLIC_KEY
FLUTTERWAVE_SECRET_KEY=YOUR_FLUTTERWAVE_SECRET_KEY
FLUTTERWAVE_ENCRYPTION_KEY=YOUR_FLUTTERWAVE_ENCRYPTION_KEY

# Blockchain Configuration (for tokenization)
BLOCKCHAIN_NETWORK=polygon-mumbai
BLOCKCHAIN_RPC_URL=https://rpc-mumbai.maticvigil.com
BLOCKCHAIN_PRIVATE_KEY=YOUR_WALLET_PRIVATE_KEY
CONTRACT_ADDRESS_ASSET_TOKEN=YOUR_DEPLOYED_CONTRACT_ADDRESS

# Frontend URL (for email links and redirects)
FRONTEND_URL=https://your-frontend.herokuapp.com

# Session Security
SESSION_SECURE_COOKIE=true
SESSION_SAME_SITE=none
