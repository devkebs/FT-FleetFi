APP_NAME=FleetFi
APP_ENV=local
APP_KEY=
# SECURITY: Set to false in production to prevent exposing sensitive info
APP_DEBUG=true
APP_URL=http://localhost

LOG_CHANNEL=stack
LOG_DEPRECATIONS_CHANNEL=null
LOG_LEVEL=debug

DB_CONNECTION=mysql
DB_HOST=127.0.0.1
DB_PORT=3306
DB_DATABASE=fleetfi
# SECURITY: Change default credentials in production
DB_USERNAME=root
DB_PASSWORD=

BROADCAST_DRIVER=log
CACHE_DRIVER=file
FILESYSTEM_DISK=local
QUEUE_CONNECTION=sync
# SECURITY: Use database or redis driver in production for better security
SESSION_DRIVER=file
SESSION_LIFETIME=120

# ============================================================================
# SECURITY CONFIGURATION
# ============================================================================

# Sanctum token expiration in minutes (1440 = 24 hours)
SANCTUM_TOKEN_EXPIRATION=1440

# CORS allowed origins (comma-separated list)
# SECURITY: Configure this for your specific frontend domains in production
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://localhost:5173

MEMCACHED_HOST=127.0.0.1

REDIS_HOST=127.0.0.1
REDIS_PASSWORD=null
REDIS_PORT=6379

MAIL_MAILER=smtp
MAIL_HOST=mailpit
MAIL_PORT=1025
MAIL_USERNAME=null
MAIL_PASSWORD=null
MAIL_ENCRYPTION=null
MAIL_FROM_ADDRESS="hello@example.com"
MAIL_FROM_NAME="${APP_NAME}"

AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_DEFAULT_REGION=us-east-1
AWS_BUCKET=
AWS_USE_PATH_STYLE_ENDPOINT=false

PUSHER_APP_ID=
PUSHER_APP_KEY=
PUSHER_APP_SECRET=
PUSHER_HOST=
PUSHER_PORT=443
PUSHER_SCHEME=https
PUSHER_APP_CLUSTER=mt1

VITE_PUSHER_APP_KEY="${PUSHER_APP_KEY}"
VITE_PUSHER_HOST="${PUSHER_HOST}"
VITE_PUSHER_PORT="${PUSHER_PORT}"
VITE_PUSHER_SCHEME="${PUSHER_SCHEME}"
VITE_PUSHER_APP_CLUSTER="${PUSHER_APP_CLUSTER}"

# FleetFi Revenue Configuration
FLEETFI_BASE_RATE_PER_KM=0.50
FLEETFI_INVESTOR_SPLIT_PERCENT=50
FLEETFI_RIDER_SPLIT_PERCENT=30
FLEETFI_MANAGEMENT_SPLIT_PERCENT=15
FLEETFI_MAINTENANCE_SPLIT_PERCENT=5

# TrovoTech Blockchain Integration (SEC-ARIP Sandbox)
TROVOTECH_BASE_URL=https://api.trovotech.io/v1
TROVOTECH_API_KEY=your_trovotech_api_key_here
TROVOTECH_ISSUER_ID=FT_ISSUER_ID
TROVOTECH_SANDBOX=true
TROVOTECH_CUSTODY_WALLET=your_custody_wallet_address_here
TROVOTECH_WEBHOOK_SECRET=your_webhook_secret_here
TROVOTECH_TIMEOUT_MS=10000
TROVOTECH_MAX_RETRIES=3

# Bantu Blockchain Configuration
BANTU_NETWORK=testnet
BANTU_RPC_URL=https://rpc.testnet.bantu.network
BANTU_HORIZON_URL=https://horizon.testnet.bantu.network
